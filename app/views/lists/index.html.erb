

<%= render 'header' %>

<div class="img-frontpage-container">
<h1> Save your movies </h1>
</div>


<div class="grid-container">
  <% @lists.each do |list| %>
    <% if list.photo.key %>
      <div class="card-index" style ="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
      url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
    <% else %>
      <div class="card-index">
    <% end %>
    <h5><%= link_to list.name, list_path(list) %></h5>
    <%= link_to "Delete list", list_path(list), method: :delete, class: 'delete-btn' %>
    </div>
  <% end %>

</div>
