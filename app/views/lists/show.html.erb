
<%= render 'header' %>



<% if @list.photo.key %>
  <div class="img-show-container" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),url('<%= cl_image_path @list.photo.key, height: 300, width: 800, crop: :fill %>');">
  <h3> <%= @list.name %></h3>
  </div>
<% end %>
<div class="grid-container" >
  <% @list.movies.each do |movie| %>
  <div class="card-show">
    <img src="<%= movie.poster_url %>" alt="">
    <h5><%= movie.title %></h5>
    <p><%= movie.overview %></p>
    <p style="background-color: lightgrey; border: 1px solid black;">
    <%= @list.bookmarks.find_by(movie_id: movie.id).comment %>
    <%= link_to "Delete bookmark",
  bookmark_path( @list.bookmarks.find_by(movie_id: movie.id)), method: :delete, class: "delete-btn" %>
  </div>
  <% end %>
</div>


<%= link_to "Add bookmark", new_list_bookmark_path(@list) , class: "btn btn-primary"%>
